	<dependencies>
		<dependency>
			<groupId>fi.ishtech.utils</groupId>
			<artifactId>hetu-util</artifactId>
			<version>${hetu-util.version}</version>
		</dependency>

		<dependency>
			<groupId>javax.validation</groupId>
			<artifactId>validation-api</artifactId>
